
<div class="nav-scroller py-1 mb-2">
    <nav class="nav d-flex justify-content-between">
        <a  class="btn btn-outline-dark" asp-action="Add" asp-controller="Trade" asp-route-company2="@ViewBag.cname" >Start</a>
        <a  class="btn btn-outline-dark" asp-action="All" asp-controller="Trade" asp-route-company2="@ViewBag.cname" >All</a>
        <a  class="btn btn-outline-dark" asp-action="Index" asp-controller="Trade" asp-route-companyName="@ViewBag.cname" >Index</a>

      </nav>
